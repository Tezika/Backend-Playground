<% include partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action ="/blogs", method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="The title of the blog"></input>     
        </div>
       <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="The url of the blog image"></input>   
       </div>
        <div class=field>
            <label>Content</label>
            <textarea name="blog[body]" placeholder="Write some content there..."></textarea>    
            <button id="btn_submit" class="positive ui big button">Submit</button>
        </div>
    </form>
</div>

